require distutils [ python_dep=2.3 ]

SUMMARY="Module for manipulating ID3 (v1 + v2) tags in Python"
HOMEPAGE="http://eyed3.nicfit.net/"
DOWNLOADS="http://eyed3.nicfit.net/releases/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"

MYOPTIONS=""

BUGS_TO="netzdamon@gmail.com"

DEFAULT_SRC_INSTALL_EXTRA_DOCS=( ChangeLog NEWS README )

src_install() {
	dodoc *.html && rm -f *.html
	distutils_src_install
	dobin bin/eyeD3 || die "dobin failed"
	doman doc/*.1
}
