require distutils

SUMMARY="A simple, fast, complete, correct and extensible JSON encoder and decoder."
HOMEPAGE="http://undefined.org/python/#simplejson"
DOWNLOADS="http://cheeseshop.python.org/packages/source/s/${PN}/${PNV}.tar.gz"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64 ~x86"

MYOPTIONS="doc"

DEPENDENCIES="
    build:
        dev-python/setuptools
"

RESTRICT="test"

BUGS_TO="netzdamon@gmail.com"

src_install() {
    distutils_src_install

    if option doc ; then
        mv docs html || die "mv docs html failed"
        dodoc -r html
    fi
}
